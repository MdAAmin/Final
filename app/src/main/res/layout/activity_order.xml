<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".OrderActivity">

    <!-- Product Name EditText -->
    <EditText
        android:id="@+id/productNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Product Name"
        android:minHeight="48dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Product Price EditText -->
    <EditText
        android:id="@+id/productPriceEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Product Price"
        android:minHeight="48dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Product Quantity EditText -->
    <EditText
        android:id="@+id/productQuantityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Product Quantity"
        android:minHeight="48dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Table Number EditText -->
    <EditText
        android:id="@+id/tableNumberEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Table Number"
        android:inputType="number"
        android:minHeight="48dp"
        android:textColor="#333333"
        android:textSize="16sp" />

    <!-- Place Order Button -->
    <Button
        android:id="@+id/placeOrderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Place Order"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF6200EE" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btn_back8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Back"
        android:textColor="#FF6200EE" />

</LinearLayout>
