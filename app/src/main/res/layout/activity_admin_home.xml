<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".AdminHome"
    android:background="#A6EAAE9B"> <!-- Light background color -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/shape4"
        android:gravity="center"
        android:text="Hello Admin"
        android:textColor="#D81B60"
        android:textSize="27sp"
        android:textStyle="bold"
        tools:ignore="TextSizeCheck" />

    <Button
        android:id="@+id/btn_insert_product"
        style="@style/MyButtonStyle"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0"
        android:text="Insert Table"
        tools:ignore="InefficientWeight,TextContrastCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_view_product"
            style="@style/MyButtonStyle"
            android:layout_marginEnd="8dp"
            android:text="View Product"
            tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/btn_update_product"
            style="@style/MyButtonStyle"
            android:layout_marginStart="8dp"
            android:text="Update Table"
            tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btn_delete_product"
            style="@style/MyButtonStyle"
            android:layout_marginEnd="8dp"
            android:text="Delete Table"
            tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />

        <Button
            android:id="@+id/btn_view_orders"
            style="@style/MyButtonStyle"
            android:layout_marginStart="8dp"
            android:text="View Orders"
            tools:ignore="HardcodedText,TextContrastCheck,VisualLintButtonSize" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">
    <Button
        android:id="@+id/btn_back4"
        style="@style/MyButtonStyle"
        android:layout_width="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="0"
                android:text="Back"
        tools:ignore="InefficientWeight,TextContrastCheck" />
        <Button
            android:id="@+id/btn_table"
            style="@style/MyButtonStyle"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="0"
            android:text="Num of Table"
            tools:ignore="InefficientWeight,TextContrastCheck" />


    </LinearLayout>
    <TextView
        android:id="@+id/tv_table_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        android:visibility="gone"/>
    <ListView
        android:id="@+id/lv_table_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />


</LinearLayout>
